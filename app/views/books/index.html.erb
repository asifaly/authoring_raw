<h1>List of Books</h1>
<%= link_to 'Add Book', new_book_path, class: 'btn btn-primary btn-lg pull-right' %>
<table class="table table-hover">
  <thead>
    <tr>
      <th class="col-md-4">Book Title</th>
      <th class="col-md-6">Book Description</th>
      <th class="col-md-5">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.description %></td>
        <td><%= link_to 'Show', book_path(book), class: 'btn btn-success btn-sm' %>
          <%= link_to 'Edit', edit_book_path(book), class: 'btn btn-warning btn-sm'  %>
          <%= link_to 'Delete', book_path(book), method: :delete, class: 'btn btn-danger btn-sm', data: {confirm: "Are you sure you want to delete the book?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>