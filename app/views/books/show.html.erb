<h1><%= @book.title %></h1>
<div class="well"><%= @book.description %></div>
<h2>List of Chapters</h2>
<%= link_to 'Add Chapter', new_book_chapter_path(@book), class: 'btn btn-primary btn-lg pull-right' %>
<table class="table table-hover">
  <thead>
    <tr>
      <th class="col-md-4">Chapter Title</th>
      <th class="col-md-6">Chapter Notes</th>
      <th class="col-md-5">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @book.chapters.each do |chapter| %>
      <tr>
        <td><%= chapter.title %></td>
        <td><%= chapter.notes %></td>
        <td><%= link_to 'Show', book_chapter_path(@book, chapter), class: 'btn btn-info btn-sm' %>
          <%= link_to 'Edit', edit_book_chapter_path(@book, chapter), class: 'btn btn-warning btn-sm'  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>