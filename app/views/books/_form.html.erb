<%= simple_form_for @book do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.button :submit, class: 'btn btn-success btn-lg' %>
  <%= link_to 'Delete Book', book_path(@book), method: :delete, class: 'btn btn-danger btn-lg', data: {confirm: "Are you sure you want to delete the book?"} if !@book.new_record?%>
<% end %>