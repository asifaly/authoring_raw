<%= simple_form_for [@book, @chapter, @section] do |f| %>
  <%= f.input :title %>
  <%= f.input :content %>
  <%= f.button :submit, class: 'btn btn-success btn-lg' %>
  <%= link_to 'Delete Section', book_chapter_section_path(@book, @chapter, @section), method: :delete, class: 'btn btn-danger btn-lg', data: {confirm: "Are you sure you want to delete the Section?"} if !@section.new_record? %>
<% end %>