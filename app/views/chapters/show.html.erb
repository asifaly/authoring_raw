<h1><%= @chapter.title %> - <small><%= @book.title %></small></h1>
<div class="well"><%= @chapter.notes %></div>
<h3>List of Sections</h3>
<%= link_to 'Add Section', new_book_chapter_section_path(@book, @chapter), class: 'btn btn-primary btn-lg pull-right' %>
<table class="table table-hover">
  <thead>
    <tr>
      <th class="col-md-4">Section Title</th>
      <th class="col-md-6">Section Notes</th>
      <th class="col-md-5">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @chapter.sections.each do |section| %>
      <tr>
        <td><%= section.title %></td>
        <td><%= section.content %></td>
        <td><%= link_to 'Show', book_chapter_section_path(@book, @chapter, section), class: 'btn btn-success btn-sm' %>
          <%= link_to 'Edit', edit_book_chapter_section_path(@book, @chapter, section), class: 'btn btn-warning btn-sm'  %>
          <%= link_to 'Delete', book_chapter_section_path(@book, @chapter, section), method: :delete, class: 'btn btn-danger btn-sm', data: {confirm: "Are you sure you want to delete the Section?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>