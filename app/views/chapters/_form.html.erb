<%= simple_form_for [@book, @chapter] do |f| %>
  <%= f.input :title %>
  <%= f.input :notes %>
  <%= f.button :submit, class: 'btn btn-success btn-lg' %>
  <%= link_to 'Delete Chapter', book_chapter_path(@book, @chapter), method: :delete, class: 'btn btn-danger btn-lg', data: {confirm: "Are you sure you want to delete the Chapter?"} if !@chapter.new_record?%>
<% end %>